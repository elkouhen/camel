	<camelContext xmlns="http://camel.apache.org/schema/spring">
		<route>
			<from uri="file:c\\temp\\camel-in" />
			<choice>
				<when>
					<simple>${in.body} == "send to endpoint1"</simple>
					<to uri="file:c\\temp\\camel-out1" />
				</when>
				<when>
					<simple>${in.body} == "send to endpoint1"</simple>
